<% provide(:title, "Post #{@micropost.id}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="user_info">
      <h1>
        <%= @micropost.content %>
      </h1>
    </section>
    <h3>React (<%= @micropost.reacts.count %>)</h3>
    <%= render :partial => 'reacts/form', :locals => {:react => @react, :post => @micropost} if logged_in? %>
  </aside>
  <div class="col-md-8">
    <h3>Comment (<%= @comments.count %>)</h3>
    <%# <ol class="microposts"> %>
      <%# <%= render @comments %>
    <%# </ol> %>
    <ol class="microposts">
      <% @comments.each do |comment| %>
        <%= render partial: "microposts/comment",  locals: {comment: comment} %>
      <% end %>
    </ol>
    <%= will_paginate @comments %>
    <%= render 'comment_form' if logged_in? %>
  </div>
</div>
