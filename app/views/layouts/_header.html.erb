<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
      </div>
      <ul class="nav navbar-nav navbar-right collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <% if logged_in? %>
          <%= render "notifications/show", notifications: current_user.notifications.first(10), num_noti_not_read: current_user.num_noti_not_read %>
        <% end %>
        <li><%= link_to I18n.t("layouts.help"), helf_path %></li>
        <% if logged_in? %>
          <li><%= link_to I18n.t("layouts.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= I18n.t("layouts.account")%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to I18n.t("layouts.profile"), @current_user %></li>
              <li><%= link_to I18n.t("layouts.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
              <%= button_to I18n.t("layouts.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to I18n.t("login.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
